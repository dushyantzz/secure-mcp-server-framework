# Secure MCP Server Configuration

# Security Settings (REQUIRED)
SECRET_KEY=your-super-secret-key-change-this-in-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password
ADMIN_EMAIL=admin@yourdomain.com

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite+aiosqlite:///./secure_mcp.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/mcp_db
# For MySQL: mysql+aiomysql://user:password@localhost:3306/mcp_db

# Redis (Optional - for distributed caching)
# REDIS_URL=redis://localhost:6379/0

# Context Management
MAX_CONTEXT_LENGTH=8192
MAX_TOOLS_PER_SESSION=50
SESSION_TIMEOUT_MINUTES=60

# Multi-tenant Support
ENABLE_MULTI_TENANT=true
DEFAULT_TENANT=default

# Rate Limiting
RATE_LIMIT_RPM=60
RATE_LIMIT_TPH=1000
ENABLE_RATE_LIMITING=true

# Security Features
ENABLE_AUDIT_LOGGING=true
ENABLE_INPUT_SANITIZATION=true
ENABLE_TOOL_SANDBOXING=true

# Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Tool Execution
TOOL_EXECUTION_TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30

# FastMCP Cloud Deployment Settings
# Uncomment and configure for cloud deployment
# MCP_CLOUD_TOKEN=your-fastmcp-cloud-token
# MCP_CLOUD_ENVIRONMENT=production